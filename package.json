{
  "name": "chesscom-helper",
  "version": "1.0.0",
  "description": "Chess.com Helper - Email notifications for player activity",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "wrangler d1 migrations create",
    "db:migrate:local": "wrangler d1 migrations apply --local",
    "db:migrate:remote": "wrangler d1 migrations apply",
    "db:studio": "wrangler d1 studio"
  },
  "keywords": [
    "chess",
    "chess.com",
    "notifications",
    "cloudflare-workers",
    "email"
  ],
  "author": "Chess.com Helper Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^4.22.0"
  },
  "dependencies": {
    "itty-router": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
